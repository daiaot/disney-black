
.slide-wrap
  width 100%

.slick-dots
  // list-style-type none
  // text-align center
  // display flex
  position absolute
  bottom -40px
  display block
  width 100%
  padding 0
  margin 0
  list-style none
  text-align center

  li
    // display inline
    position relative
    display inline-block
    width 14px
    height 14px
    margin 0 5px
    padding 0
    cursor pointer

    &.slick-active
      button:before
        color #a51fa9

    button
      font-size 0
      line-height 0
      display block
      width 14px
      height 14px
      padding 5px
      cursor pointer
      color transparent
      border 0
      outline none
      background transparent

      &:before
        font-size 14px
        line-height 14px
        position absolute
        top 0
        left 0
        width 14px
        height 14px
        content '‚óè'
        text-align center
        opacity 0.75
        color #c2c3c3
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale

.slick-slide
  img
    width 100%