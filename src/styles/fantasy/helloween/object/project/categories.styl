.sec-inner
  width 100%
  max-width 750px
  margin auto


.gallery_wrap
  position relative
  &__lists
    display flex
    flex-wrap wrap
    justify-content space-between
    font-size 0
    li
      width per(235)
      padding-bottom 10px
      +sp()
        img
          width 100%
  .sec-btn__showmore
    position absolute
    // bottom 48px
    bottom 0
    left 50%
    transform translate(-50%, -32.4%)



.insta-wrap
  &__kv
    background: url(../images/img_insta_kv.png) 50% 0 no-repeat
    background-size 100% auto
    padding-top per(789)
    margin-bottom per(20)
  &__stories
    background: url(../images/deco_spider.png) 64% -4% no-repeat
    background-size per(903) auto
    padding-top per(218,903)
    margin-bottom per(20)
    ul
      display flex
      flex-wrap wrap
      justify-content space-between
      padding 0 per(24)
      margin-bottom per(35)
    li
      width per(225,702)
      img
        width 100%

.sec-btn
  &__dl
    display block
    background: url(../images/btn_download.png) 50% 0 no-repeat
    background-size per(700) auto
    padding-top per(82)
  &__instagram
    display block
    background: url(../images/btn_instagram.png) 50% 0 no-repeat
    background-size per(700) auto
    padding-top per(82)

  &__showmore
    display block
    width per(354)
    height 0
    padding-top per(37)
    background url(../images/btn_more.png) 50% 0 no-repeat
    margin auto
    background-size 100% auto


