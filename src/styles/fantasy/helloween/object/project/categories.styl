
clearfix()
  +cache('clearfix')
    &::after
      content ''
      display block
      clear both

#content-area
  position relative
  clear both
  background: url(../images/bg.png) 50% 0 repeat;

  a
    transition: all .3s;
    &:hover
      opacity .7
  *
    box-sizing border-box

  .sec-inner
    position relative
    // z-index: 70
    overflow hidden

.sec-block
  // margin-bottom 30px
  h2
    text-indent 100%
    white-space nowrap
    overflow hidden
    line-height 0

  h3
    text-indent 100%
    white-space nowrap
    overflow hidden
    line-height 0

  &__lead
    display block

  &__text
    text-align center
    color #fff
    font-size (26 / 750) * 100vw
    line-height 1.8
    +pc()
      font-size 26px

  &:nth-child(2)
    margin-bottom per(100)
    .sec-block__lead
      background url(../images/img_lead01.png) 50% 0 no-repeat;
      background-size 104% auto
      padding-top: per(201)

  &:nth-child(3)
    .sec-block__title
      background url(../images/img_title01.png) 50% 0 no-repeat;
      background-size per(708) auto
      padding-top: per(289)
    .sec-block__text
      margin-top per(-21)
      padding-bottom per(60)


  &:nth-child(4)
      background url(../images/deco_punpkin.png) 50% 0 no-repeat;
      background-size per(711) auto
      padding-top: per(196,711)
      margin-top per(80)
    .sec-block__title
      background url(../images/img_title02.png) 50% 0 no-repeat;
      background-size per(708) auto
      padding-top: per(289)
      margin-top per(110)
    .sec-block__lead
      background url(../images/img_lead02.png) 50% 0 no-repeat;
      background-size per(587) auto
      padding-top: per(132,587)

.youtube_wrap
  max-width 100% !important
  min-width 100% !important
  width 100%
  overflow hidden
  position relative
  cursor pointer

.youtube
  width 100% !important
  display block
  position relative
  padding-top 56.25% !important

  iframe
    position absolute
    // right: 0
